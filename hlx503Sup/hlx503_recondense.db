## Status of recondense

record(bi, "$(P)RECONDENSING") {
    field(DESC, "Is hlx503 recondensing currently")
    field(ZNAM, "NO")
    field(ONAM, "YES")
}

record(bo, "$(P)RECONDENSING:SP") {
    field(DESC, "Is hlx503 recondensing currently")
    field(ZNAM, "NO")
    field(ONAM, "YES")
    field(OUT, "$(P)RECONDENSING PP")
    field(UDFS, "NO_ALARM")
}

record(mbbi, "$(P)RECONDENSE:PART") {
    field(DESC, "The part of the recondense we are on")

    field(ZRVL, "0")
    field(ZRST, "SETUP")

    field(ONVL, "1")
    field(ONST, "PART 1")

    field(TWVL, "2")
    field(TWST, "PART 2")

    field(THVL, "3")
    field(THST, "PART 3")

    field(FRVL, "4")
    field(FRST, "FINISHING")

    field(FVVL, "5")
    field(FVST, "NOT RECONDENSING")
}

record(mbbo, "$(P)RECONDENSE:PART:SP") {
    field(DESC, "The part of the recondense we are on")

    field(ZRVL, "0")
    field(ZRST, "SETUP")

    field(ONVL, "1")
    field(ONST, "PART 1")

    field(TWVL, "2")
    field(TWST, "PART 2")

    field(THVL, "3")
    field(THST, "PART 3")

    field(FRVL, "4")
    field(FRST, "FINISHING")

    field(FVVL, "5")
    field(FVST, "NOT RECONDENSING")
    
    field(OUT, "$(P)RECONDENSE:PART PP")

    field(UDFS, "NO_ALARM")
}

record(bi, "$(P)RECONDENSE:TIMED_OUT") {
    field(DESC, "Did the last recondense time out")

    field(ZNAM, "NO")
    field(ONAM, "YES")
}

record(bo, "$(P)RECONDENSE:TIMED_OUT:SP") {
    field(DESC, "Set if the recondense timed out")

    field(ZNAM, "NO")
    field(ONAM, "YES")

    field(OUT, "$(P)RECONDENSE:TIMED_OUT PP")

    field(UDFS, "NO_ALARM")
}
